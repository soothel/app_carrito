<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
<h1>
	Listado de Sliders
	<%= link_to "Nuevo", new_slider_path , class: "btn btn-dark btn-xs" %>

</h1>
</div>

<div class="table">

<table id="mi_tablita" class="table table-striped table-sm">
	<thead>
		<tr>
			<td>NÂº</td>
			<td>Nombre</td>
			<td>Slider Web</td>
			<td>Slider Mobile</td>
			<td>Destacar</td>
			<td>Estado</td>
			<td>Acciones</td>			
		</tr>
	</thead>
	<tbody>
		<% @sliders.each_with_index do |slider,index| %>
		<tr>
			<td><%= index + 1 %></td>
			<td><%= slider.name %></td>
			<td>
				<img src="<%= slider.image %>" width="100" height="100">

			</td>
			<td>
				<img src="<%= slider.image_mobile %>" width="100" height="100">
			</td>
			<td>
				<%= button_to slider.str_remark_icon, slider, method: :put, class: "btn btn-secondary rounded-circle d-flex justify-content-center p-0", style: "height: 40px; width: 40px" %>
			</td>
			<td><%= slider.str_deleted %></td>
            <td>
            	<div class="btn-group" >
				    <%= link_to "<i class='fa fa-eye'></i>  ".html_safe, slider, class: "btn btn-xs btn-primary" %>
						
				   	<%= link_to "<i class='fa fa-pencil'></i>  ".html_safe, edit_slider_path(slider), class: "btn btn-xs btn-warning" %>

					<%= button_to "<i class='fa fa-trash'></i>  ".html_safe, slider, method: :delete ,  class: "btn  btn-xs btn-danger"%>
            		
            	</div>
            </td>
		</tr>
		<% end %>

	</tbody>
</table>
</div>
 




