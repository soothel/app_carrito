<%= form_with(model: product, class: 'mt-5') do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.number_field :category_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :mark_id %>
    <%= form.number_field :mark_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control-file' %>
  </div>

  <div class="form-group">
    <%= form.label :list_price %>
    <%= form.text_field :list_price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :discount %>
    <%= form.text_field :discount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ranked %>
    <%= form.number_field :ranked, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :stock %>
    <%= form.number_field :stock, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :technical_info %>
    <%= form.text_area :technical_info, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :attach %>
    <%= form.text_area :attach, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :deleted %>
    <%= form.number_field :deleted, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
